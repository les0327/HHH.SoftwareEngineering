<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AdvertWindowController">

    <padding>
        <Insets bottom="10" left="25" right="25" top="25" />
    </padding>
    
    <TableView fx:id="table" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="1">
        <columns>
            <TableColumn prefWidth="75" text="Name">
                <cellValueFactory><PropertyValueFactory property="name" /> </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="200" text="Description">
                <cellValueFactory><PropertyValueFactory property="description" /> </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="75" text="Type">
                <cellValueFactory><PropertyValueFactory property="type" /> </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="70.0" text="Created">
                <cellValueFactory><PropertyValueFactory property="creation" /> </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="70.0" text="End">
                <cellValueFactory><PropertyValueFactory property="end" /> </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="40.0" text="Seats">
                <cellValueFactory><PropertyValueFactory property="seatNumber" /> </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>

    <Label alignment="CENTER" contentDisplay="TOP" text="ADVERTS" textAlignment="CENTER" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="0">
      <font>
         <Font size="18.0" />
      </font>
    </Label>

    <HBox alignment="CENTER" spacing="25" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="3">
        <Button onAction="#handleUpdateButton" text="Update" />
        <Button onAction="#handleNewAdvertButton" text="New Advert" />
    </HBox>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
